<core:FragmentDefinition xmlns:custom="lib.myLibrary"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="pageWord" title="{i18n>title}">
        <headerContent>
            <Button text="Train" press='onButtonTrainPress' enabled="{helpModel>/isEnabled}"></Button>
          
        </headerContent>
        <HBox items="{Words}" id="words" wrap="Wrap" >
            <items>
                <custom:FlipCard header="{word}" flip="true" isEdit="false" subheader="{word}-{translation}" srcPicture="{imageSrc}" srcAudio="{audioSrc}" />
            </items>
        </HBox> 
    </Page>
</core:FragmentDefinition>
